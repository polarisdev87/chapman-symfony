{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "module": "esnext",
    "target": "es5",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ]
  },
  "include": [
    "assets/js/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
